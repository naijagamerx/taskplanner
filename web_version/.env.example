# Task Planner Web Application - Environment Configuration
# Copy this file to .env and update with your production values

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your_super_secret_key_here_change_this_in_production

# Server Configuration
HOST=0.0.0.0
PORT=5000

# CORS Configuration (comma-separated list of allowed origins)
# For production, specify your domain(s)
ALLOWED_ORIGINS=https://example.com,https://www.example.com

# Database Configuration
# Options: sqlite, mysql
DB_TYPE=mysql

# MySQL Configuration (only needed if DB_TYPE=mysql)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=task_planner
DB_USER=your_mysql_username
DB_PASSWORD=your_mysql_password

# SQLite Configuration (only needed if DB_TYPE=sqlite)
DB_PATH=/path/to/your/task_planner.db

# Security Settings
# Set to True only for development
FLASK_DEBUG=False

# Optional: SSL/HTTPS Configuration
# PREFERRED_URL_SCHEME=https

# Optional: Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/taskplanner/app.log
